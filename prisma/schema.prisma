// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
}

model Objective {
  id String @id @default(uuid())

  KeyResult KeyResult[]

  @@map("objectives")
}


model KeyResult {
  id          String @id @default(uuid())
  objectiveId String @map("objective_id")

  objective Objective @relation(fields: [objectiveId], references: [id])

  @@map("key_results")
}

model Meta {
  id_meta Int @id @default(autoincrement())
  descricao String
  Metas_Tarefa Tarefa[] 
}

model Tarefa {
  id_tarefa Int @id @default(autoincrement())
  descricao String
  status String
  id_meta Int @unique
  Tarefa_Meta Meta @relation(fields:[id_meta],references:[id_meta])
  Tarefa_Historico Historico?
}

model Historico{
  id_historico Int @id @default(autoincrement())
  inicio DateTime 
  fim DateTime 
  id_tarefa Int @unique
  id_usuario Int @unique
  Historico_Tarefa Tarefa @relation(fields:[id_tarefa],references:[id_tarefa])
  Historico_Usuario Usuario @relation(fields: [id_usuario],references: [id_usuario])
}

model Usuario{
  id_usuario Int @id @default(autoincrement())
  nome String
  email String
  Historicos Historico[]
}